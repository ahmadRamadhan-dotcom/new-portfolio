---
import MainHead from "./MainHead.astro";
import Header from "../components/Header.astro";

const { title, description, head } = Astro.props;
---

<html lang="en">
  <head>
    {head}
    <MainHead title={title} description={description} />
  </head>
  <body>
    <Header />
    <main tabindex="-1">
      <slot />
    </main>
    <style>
      html {
        color-scheme: dark;
      }
      body {
        background: #000;
        font-family: "Space Grotesk", sans-serif;
      }
    </style>
  </body>
</html>
