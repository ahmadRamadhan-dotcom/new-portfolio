---
import Icons from "./Icons.astro";
import pages from "../data/pages";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname;
---

<header
  class="w-10/12 md:w-72 fixed bottom-5 z-20 md:top-4 left-1/2 -translate-x-1/2 border-gray-300 border h-12 rounded-md p-3 bg-white text-black shadow-sm shadow-cyan-300 grid grid-cols-5 place-content-center place-items-center md:gap-10 px-8"
>
  {
    pages.map((page) => (
      <>
        <a
          id="nav"
          href={page.href}
          class={
            currentPath === page.href
              ? "active text-lg"
              : "hover:text-cyan-500 text-lg"
          }
        >
          <Icons icon={page.icon} />
        </a>
      </>
    ))
  }
</header>

<style>
  .active {
    color: #06b6d4;
  }
</style>
